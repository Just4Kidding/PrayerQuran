    </style>

    <style name="Widget.RaisedButton" parent="@android:style/Widget.Material.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#414141</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_xmedium</item>
        <item name="android:paddingLeft">@dimen/spacing_double</item>
        <item name="android:paddingRight">@dimen/spacing_double</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.BorderlessButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#414141</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>

</resources>