<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bgContent"
              android:baselineAligned="false"
              android:orientation="horizontal"
              tools:context=".app.main.activitymain.Main2Activity">

    <!-- LEFT TITLE PART -->
    <RelativeLayout
            android:id="@+id/lon_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_155mdp"
            android:layout_weight="3"
            android:background="@color/e4"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20mdp"
            android:paddingLeft="@dimen/_10mdp"
            android:paddingRight="@dimen/_10mdp"
            android:paddingTop="@dimen/_20mdp">

        <com.zaker.android.sapeh.app.main.activitymain.LightTextView
                android:id="@+id/numbers_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                android:text="@string/z99"
                android:textColor="@android:color/white"
               android:textSize="@dimen/numberout" />


    </RelativeLayout>
    <!-- RIGHT TITLE PART -->
    <RelativeLayout
            android:background="@drawable/popup_window_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

<!--  android:src="@drawable/from_to_purple" -->
        <ImageView
                android:id="@+id/title_from_to_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_line"
                tools:ignore="ContentDescription"/>

        <com.zaker.android.sapeh.app.main.activitymain.LightTextView
                android:id="@+id/text1out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/esm0"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textname" />

        <ImageView
                android:id="@+id/title_from_to_dots_divider"
                android:layout_width="match_parent"
                android:paddingEnd="@dimen/_20mdp"
                android:layout_height="@dimen/_2mdp"
                android:layout_below="@id/text1out"
                android:layout_marginBottom="@dimen/_5mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:layout_marginStart="@dimen/_40mdp"
                android:src="@color/contentDividerLine"
                tools:ignore="ContentDescription"/>

        <com.zaker.android.sapeh.app.main.activitymain.LightTextView
                android:id="@+id/title_to_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/marginend"
                android:layout_marginStart="@dimen/marginstart"
                android:paddingEnd="@dimen/paddingend"
                android:paddingStart="@dimen/paddingstart"
                android:text="@string/esm000"
                android:textAlignment="center"
                android:layout_below="@id/title_from_to_dots_divider"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:fadingEdge="vertical"
                android:lines="2"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/textaya" />

    </RelativeLayout>
</LinearLayout>