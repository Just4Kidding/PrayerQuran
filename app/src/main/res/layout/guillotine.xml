<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbfbfb"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        tools:context=".app.main.activitymain.MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            style="@style/Toolbar"
            app:contentInsetStart="@dimen/_1mdp">

        <ImageView
                android:id="@+id/guillotine_hamburger"
                style="@style/ImageView.Hamburger"
                app:srcCompat="@drawable/ic_menu"
                tools:ignore="ContentDescription" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:id="@+id/profile_group"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_marginTop="@dimen/_30mdp"
            android:weightSum="1"
            tools:ignore="UseCompoundDrawables"
            android:baselineAligned="false">

        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".28">


            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/frst"
                    android:padding="@dimen/_6mdp"
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_alignParentEnd="true"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_2mdp"
                    app:fb_defaultColor="#27a3dd"
                    app:fb_focusColor="@color/black"
                    app:fb_iconPaddingLeft="0dp"
                    app:fb_iconPaddingRight="0dp"
                    app:fb_iconResource="@drawable/names"
                    app:fb_radius="@dimen/_64mdp" />

        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".75">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/frist1"
                    android:padding="@dimen/_8mdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24mdp"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_2mdp"
                    app:fb_defaultColor="#27a3dd"
                    app:fb_focusColor="@color/black"
                    app:fb_radius="@dimen/_12mdp"
                    app:fb_text="@string/profile"
                    app:fb_textColor="#ffffffff"
                    app:fb_textGravity="center_vertical"
                    app:fb_textSize="@dimen/G1" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/feed_group"
            android:weightSum="1"
            style="@style/LinearLayout.GuillotineItem"
            tools:ignore="UseCompoundDrawables"
            android:baselineAligned="false">

        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".28">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/tow"
                    android:padding="@dimen/_5mdp"
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_alignParentEnd="true"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_3mdp"
                    app:fb_defaultColor="#E56353"
                    app:fb_focusColor="@color/black"
                    app:fb_iconPaddingLeft="0dp"
                    app:fb_iconPaddingRight="0dp"
                    app:fb_iconResource="@drawable/quran"
                    app:fb_radius="@dimen/_64mdp" />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".75">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/tow2"
                    android:padding="@dimen/_8mdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24mdp"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_2mdp"
                    app:fb_defaultColor="#E56353"
                    app:fb_focusColor="@color/black"
                    app:fb_radius="@dimen/_12mdp"
                    app:fb_text="@string/feed"
                    app:fb_textColor="#ffffffff"
                    app:fb_textGravity="center_vertical"
                    app:fb_textSize="@dimen/G1" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/fanlayout"
            android:weightSum="1"
            style="@style/LinearLayout.GuillotineItem"
            tools:ignore="UseCompoundDrawables"
            android:baselineAligned="false">

        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".28">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/fan"
                    android:padding="@dimen/_5mdp"
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_alignParentEnd="true"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_3mdp"
                    app:fb_defaultColor="@color/fanlayout"
                    app:fb_focusColor="@color/black"
                    app:fb_iconPaddingLeft="0dp"
                    app:fb_iconPaddingRight="0dp"
                    app:fb_iconResource="@drawable/quran2"
                    app:fb_radius="@dimen/_64mdp" />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".75">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/fan2"
                    android:padding="@dimen/_8mdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24mdp"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_2mdp"
                    app:fb_defaultColor="@color/fanlayout"
                    app:fb_focusColor="@color/black"
                    app:fb_radius="@dimen/_12mdp"
                    app:fb_text="@string/fantitl"
                    app:fb_textColor="#ffffffff"
                    app:fb_textGravity="center_vertical"
                    app:fb_textSize="@dimen/G1" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:weightSum="1"
            android:id="@+id/settings_group"
            style="@style/LinearLayout.GuillotineItem"
            tools:ignore="UseCompoundDrawables"
            android:baselineAligned="false">

        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".28">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/three"
                    android:padding="@dimen/_4mdp"
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_alignParentEnd="true"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_2mdp"
                    app:fb_defaultColor="@color/bolo"
                    app:fb_focusColor="@color/black"
                    app:fb_iconPaddingLeft="0dp"
                    app:fb_iconPaddingRight="0dp"
                    app:fb_iconResource="@drawable/prayer"
                    app:fb_radius="@dimen/_64mdp" />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".75">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/three3"
                    android:padding="@dimen/_8mdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24mdp"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_2mdp"
                    app:fb_defaultColor="@color/bolo"
                    app:fb_focusColor="@color/black"
                    app:fb_radius="@dimen/_12mdp"
                    app:fb_text="@string/activity"
                    app:fb_textColor="#ffffffff"
                    app:fb_textGravity="center_vertical"
                    app:fb_textSize="@dimen/G1" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:weightSum="1"
            android:id="@+id/about"
            style="@style/LinearLayout.GuillotineItem"
            tools:ignore="UseCompoundDrawables"
            android:baselineAligned="false">

        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".28">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/four"
                    android:padding="@dimen/_2mdp"
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_50mdp"
                    android:layout_alignParentEnd="true"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_2mdp"
                    app:fb_defaultColor="#FED663"
                    app:fb_focusColor="@color/black"
                    app:fb_iconPaddingLeft="0dp"
                    app:fb_iconPaddingRight="0dp"
                    app:fb_iconResource="@drawable/user"
                    app:fb_radius="@dimen/_64mdp" />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="@dimen/_50mdp"
                android:layout_weight=".75">

            <com.zaker.android.sapeh.app.main.bubble.BubbleLayout
                    android:id="@+id/four4"
                    android:padding="@dimen/_8mdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24mdp"
                    app:fb_borderColor="@color/gray_light"
                    app:fb_borderWidth="@dimen/_2mdp"
                    app:fb_defaultColor="#FED663"
                    app:fb_focusColor="@color/black"
                    app:fb_radius="@dimen/_12mdp"
                    app:fb_text="@string/settings"
                    app:fb_textColor="#ffffffff"
                    app:fb_textGravity="center_vertical"
                    app:fb_textSize="@dimen/G1" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>