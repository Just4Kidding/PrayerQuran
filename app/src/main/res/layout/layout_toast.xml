<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/_8mdp">

    <com.zaker.android.sapeh.app.main.activitymain.LightTextView
        android:id="@+id/blurViewRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:alpha=".16"
        android:shadowColor="@android:color/black"
        android:shadowDx="16.0"
        android:shadowDy="4.0"
        android:shadowRadius="24"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:textAlignment="center"
        android:textSize="@dimen/_16mdp" />

    <com.zaker.android.sapeh.app.main.activitymain.LightTextView
        android:id="@+id/blurViewLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:alpha=".16"
        android:shadowColor="@android:color/black"
        android:shadowDx="-16.0"
        android:shadowDy="4.0"
        android:shadowRadius="24"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:textAlignment="center"
        android:textSize="@dimen/_16mdp" />

    <com.zaker.android.sapeh.app.main.activitymain.LightTextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:textAlignment="center"
        android:textSize="@dimen/_16mdp" />

</RelativeLayout>