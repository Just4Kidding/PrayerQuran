<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="@dimen/_150mdp"
             android:background="@drawable/o_list"
             android:layoutDirection="rtl">

    <ImageView
            android:id="@+id/image_view_icon"
            app:srcCompat="@drawable/ic_o1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

    <com.zaker.android.sapeh.app.main.activitymain.LightTextView
            android:id="@+id/text1"
            android:text="@string/dua_adm"
            android:textSize="@dimen/list_text_1"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_4mdp"
            android:layout_marginStart="@dimen/_10mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <com.zaker.android.sapeh.app.main.activitymain.LightTextView
            android:id="@+id/text2"
            android:text="@string/auto"
            android:textSize="@dimen/list_text_2"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/_10mdp"
            android:layout_marginBottom="@dimen/_4mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</FrameLayout>